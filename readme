Installation
	(linux) git clone https://jimmy_frog@bitbucket.org/jimmy_frog/vim.git .vim
	(windows) git clone https://jimmy_frog@bitbucket.org/jimmy_frog/vim.git vimfiles

Symlinks (linux)
	ln -s ~/.vim/vimrc ~/.vimrc
	ln -s ~/.vim/gvimrc ~/.gvimrc

Symlinks (windows)
  C:\Program Files\Vim>fsutil hardlink create _vimrc vimfiles\vimrc
  C:\Program Files\Vim>fsutil hardlink create _gvimrc vimfiles\gvimrc

push
  [ config one off: git remote add origin https://jimmy_frog@bitbucket.org/jimmy_from/vim.git ]

  git push -u origin master 
  git push 
  git pull
 
submodules
  git submodule add https://github.com/tsaleh/vim-matchit.git bundle/matchit
  git submodule init
  git submodule update
  git submodule foreach git pull origin master ( # fetch all submodules )

plugins:
  changecolor
  conqueterm
  matchit
  nerdcommenter
  nerdtree
  snipmate
  snippets
  tabular
  tlib
  vimaddonmw
  cmdlinecomplete
